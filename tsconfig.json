{
  "compilerOptions": {
      "removeComments": true,
      "allowJs": true,
      "preserveConstEnums": true,
      "module": "CommonJS",
      "target": "ES2019",
      "declaration": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "lib": ["esnext"],
      "outDir": "svc",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "paths": {
          "*": ["types/*"]
      },
      "baseUrl": "./",
      "typeRoots": ["node_modules/@types"],
      "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "node_modules", "dist"]
}
